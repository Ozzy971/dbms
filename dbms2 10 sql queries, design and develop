mysql> show databases; 

mysql> create database info; 

mysql> show databases; 

mysql> use info; 

mysql> create table student(roll_no int(30) primary key,name varchar(40),age int(30)); 

mysql> desc student; 

mysql> create table stud(name varchar(40) not NULL); 

mysql> Alter table Student add Address varchar(30); 

mysql> desc student; 
 
mysql> Alter table Student modify age int(5); 

mysql> desc student; 

mysql> Alter table Student drop column age; 

mysql> desc student; 

mysql> create view v1 as select name,roll_no from student ; 

mysql> select * from v1; 


mysql> create unique index ind1 on student(name,roll_no); 

mysql> show index from student; 

mysql> alter table student add index ind2(address); 

mysql> show index from student; 

mysql> drop table student; 

mysql> desc student; 



DESIGN and develop sql ddl statements


mysql> show databases; 
 
mysql> use emp; 
 
/* Create a table which are contains column(attributes: with data types */

mysql> create table emp_info(emp_id int(30) primary key ,emp_name 
varchar(40),emp_salary int(40),address varchar(50)); 

 
mysql> desc emp_info; 

 
/* By using DML query insert ,insert the values to the Attributes */ 
 
mysql> insert into emp_info 
values(101,'Amay',45000,'pune'),(102,'avi',50000,'chinchwad'),(103,'sunny 
',43000,'noida'),(104,'arnav',65 
000,'mumbai'); 

mysql> select * from emp_info; 

/* By using DML command Delete ,deleting the column from the table */ 

mysql> delete from emp_info where address='noida'; 

 
mysql> select * from emp_info; 

/* By using DML command "UPDATE" , updating the values . */ 

mysql> update emp_info set emp_name='shruti' where emp_id=101; 

mysql> select * from emp_info; /* displaying All containts From the table */ 

/* Display the 
Address,emp_name From the emp_info. */ mysql> select address 
,emp_name from emp_info; 

 
/* Displaying the emp_name by Ascending Order .(By using "ORDER BY" query 
): */ 
mysql> select * from emp_info order by emp_name ASC; 

3 rows in set (0.05 sec) 
/* Display All emp_name FROM the emp_info Which are ending with "V" .(By using "LIKE" 
operator); */ 
mysql> select * from emp_info where emp_name like '%v'; 

/* Display All emp_name FROM the emp_info Which are Starting with "a" .(By using 
"LIKE" operator); */ 
 
mysql> select * from emp_info where emp_name like 'a%'; 

/* By Using "DISTINCT" keyword display the particular column . */ 

mysql> select distinct emp_id from emp_info; 

/* Display the particular emp_name from the emp_info */ 
 
mysql> select emp_name from emp_info where emp_name in ('avi','arnav'); 

/* Display The table with All containts */ 
 
mysql> select * from emp_info; 

 
/* Check whether emp_name are NULL or Not */ 
 
mysql> select * from emp_info where emp_name is null; 

/* To Find The Average Salary FROM The Table */ 

mysql> select avg(emp_salary) from emp_info; 

/* To Find The MINIMUM Salary From the emp_info */ 

mysql> select min(emp_salary) from emp_info; 

/* To Find The MAXIMUM Salary From the emp_info */ 
 
mysql> select max(emp_salary) from emp_info; 

/* To Find The COUNT of The Column */ 
 
mysql> select count(emp_salary) from emp_info; 

/* To Find The SUM of The SALARY */ 
 
mysql> select sum(emp_salary) from emp_info; 

 
mysql> select emp_name, sum(emp_salary) from emp_info group by emp_name; 

 
/* To Display the Salary Whose Having Salary Less Than the 55000K */ 
 
mysql> select emp_name, sum(emp_salary) from emp_info group by emp_name 
having sum(emp_salary)<55000;
